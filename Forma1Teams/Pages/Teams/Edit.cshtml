@page
@model Forma1Teams.Pages.Teams.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfFoundation" class="control-label"></label>
                <input asp-for="YearOfFoundation" class="form-control" />
                <span asp-validation-for="YearOfFoundation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorldChampionNumber" class="control-label"></label>
                <input asp-for="WorldChampionNumber" class="form-control" />
                <span asp-validation-for="WorldChampionNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EntryFeePaid" /> @Html.DisplayNameFor(model => model.EntryFeePaid)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
