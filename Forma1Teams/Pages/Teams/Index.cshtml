@page
@model Forma1Teams.Pages.Teams.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container col-lg-10">
    <table class="table table-hover table-active">
        <thead>
            <tr class="table-info">
                <td style="vertical-align: middle;">
                    <h3><a asp-page="./Index" asp-route-sortOrder="@Model._teamService.NameSort">Team name</a></h3>
                </td>
                <td style="text-align:center;vertical-align: middle;">
                    <h3><a asp-page="./Index" asp-route-sortOrder="@Model._teamService.FoundationSort">Year of foundation</a></h3>
                </td>
                <td style="text-align:center;vertical-align: middle;">
                    <h3><a asp-page="./Index" asp-route-sortOrder="@Model._teamService.FoundationSort">Number of won world championships</a></h3>
                </td>
                <td style="text-align:center;vertical-align: middle;">
                    <h5>Is entry fee paid</h5>
                </td>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._teamService.Teams)
            {
            <tr>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="vertical-align: middle;text-align:center;">
                    @Html.DisplayFor(modelItem => item.YearOfFoundation)
                </td>
                <td style="vertical-align: middle;text-align:center;">
                    @Html.DisplayFor(modelItem => item.WorldChampionNumber)
                </td>
                <td style="vertical-align: middle;text-align:center;">
                    @Html.DisplayFor(modelItem => item.EntryFeePaid)
                </td>
                <td>
                    <button type="button" class="btn btn-sm btn-danger">
                        <a class="nav-link" asp-page="./Delete" asp-route-id="@item.TeamID">
                            <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-trash" fill="white" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-sm btn-info">
                        <a class="nav-link" asp-page="./Edit" asp-route-id="@item.TeamID">
                            <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="white" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>
                    </button>
                </td>
            </tr>
            }
            <tr>
                <td style="vertical-align: middle;text-align:center;">
                    <button type="button" class="btn btn-dark"><a class="nav-link text-white" asp-page="Create">Create New Team</a></button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

        
