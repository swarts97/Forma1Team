@page
@model Forma1Teams.Pages.Teams.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deleting team</h1>

<hr />
<h3>Are you sure you want to delete this team?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Team name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
        <dt class="col-sm-2">
            Year of foundation
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.YearOfFoundation)
        </dd>
        <dt class="col-sm-2">
            Number of won world championships
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.WorldChampionNumber)
        </dd>
        <dt class="col-sm-2">
            Is entry fee paid
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.EntryFeePaid)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Team.TeamID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
